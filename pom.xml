<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.big.data</groupId>
    <artifactId>study-test1</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <modules>
        <module>study-test1-api</module>
        <module>study-test1-service</module>
        <module>study-test-web2</module>
        <module>study_im_service</module>
    </modules>
    <properties>
        <project.version>1.0.0</project.version>
        <org.springframework.version>4.3.4.RELEASE</org.springframework.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <version>3.2.3.RELEASE</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${org.springframework.version}</version>
        </dependency>

        <!--log4j日志依懒-->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.3</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.21</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.7.21</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>
    </dependencies>

    <!--多环境打包配置-->
    <profiles>
        <profile>
            <id>dev_debug</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <package.environment>env/dev</package.environment>
                <package.mode>env/debug</package.mode>
            </properties>
        </profile>
        <profile>
            <id>dev_release</id>
            <properties>
                <package.environment>env/dev</package.environment>
                <package.mode>env/release</package.mode>
            </properties>
        </profile>

        <profile>
            <id>test_debug</id>
            <properties>
                <package.environment>env/test</package.environment>
                <package.mode>env/debug</package.mode>
            </properties>
        </profile>
        <profile>
            <id>test_release</id>
            <properties>
                <package.environment>env/test</package.environment>
                <package.mode>env/release</package.mode>
            </properties>
        </profile>

        <profile>
            <id>prd_debug</id>
            <properties>
                <package.environment>env/prd</package.environment>
                <package.mode>env/debug</package.mode>
            </properties>
        </profile>
        <profile>
            <id>prd_release</id>
            <properties>
                <package.environment>env/prd</package.environment>
                <package.mode>env/release</package.mode>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>

    </build>

</project>